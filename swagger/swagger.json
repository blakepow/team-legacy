            "example": "theUser"
          },
          "email": {
            "type": "string",
            "example": "john@email.com"
          },
          "password": {
            "type": "string",
            "example": "$2a$10$.yfnmuLUYJ8RPVBANuI/dOn.0q"
          },
          "__v": {
            "type": "integer",
            "example": 0
          }
        }
      },
      "ClientError": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Invalid input. Please try again."
          }
        }
      },
